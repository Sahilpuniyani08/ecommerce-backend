{
  "openapi": "3.0.0",
  "info": {
    "title": "E-commerce API",
    "version": "1.0.0",
    "description": "API documentation for Users, Products, Carts, and Orders"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "User related APIs"
    },
    {
      "name": "Products",
      "description": "Product management APIs"
    },
    {
      "name": "Cart",
      "description": "Cart management APIs"
    },
    {
      "name": "Orders",
      "description": "Order management APIs"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Email already registered"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, returns JWT token"
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "admin"
        ],
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      }
    },
    "/products": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Create a new product",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "admin"
        ],
        "description": "Upload an image (multipart/form-data) and add product details",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "iPhone 16"
                  },
                  "description": {
                    "type": "string",
                    "example": "Latest iPhone model"
                  },
                  "category": {
                    "type": "string",
                    "example": "Mobiles"
                  },
                  "price": {
                    "type": "number",
                    "example": 799
                  },
                  "stock": {
                    "type": "number",
                    "example": 10
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "name",
                  "price",
                  "stock",
                  "image"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully"
          }
        }
      },
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get all products",
        "security": [],
        "x-roles": [],
        "responses": {
          "200": {
            "description": "List of products"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get single product by ID",
        "security": [],
        "x-roles": [],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "66d0e6f7b22a3c7c9d901234"
          }
        ],
        "responses": {
          "200": {
            "description": "Product details"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    },
    "/cart": {
      "post": {
        "tags": [
          "Cart"
        ],
        "summary": "Add product to cart",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "customer",
          "admin"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "string",
                    "example": "66d0e6f7b22a3c7c9d901234"
                  },
                  "quantity": {
                    "type": "number",
                    "example": 2
                  }
                },
                "required": [
                  "productId",
                  "quantity"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product added to cart"
          }
        }
      },
      "get": {
        "tags": [
          "Cart"
        ],
        "summary": "Get cart for the authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "customer",
          "admin"
        ],
        "responses": {
          "200": {
            "description": "User's cart"
          }
        }
      }
    },
    "/cart/{productId}": {
      "delete": {
        "tags": [
          "Cart"
        ],
        "summary": "Remove product from cart",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "customer",
          "admin"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "productId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product removed from cart"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags": [
          "Orders"
        ],
        "summary": "Create a new order",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "customer",
          "admin"
        ],
        "description": "Creates an order from the authenticated user's cart",
        "requestBody": {
          "required": false
        },
        "responses": {
          "201": {
            "description": "Order created successfully"
          },
          "400": {
            "description": "Cart is empty"
          }
        }
      },
      "get": {
        "tags": [
          "Orders"
        ],
        "summary": "Get orders for the authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "customer",
          "admin"
        ],
        "responses": {
          "200": {
            "description": "List of user's orders"
          }
        }
      }
    },
    "/orders/{orderId}": {
      "put": {
        "tags": [
          "Orders"
        ],
        "summary": "Update order status",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "x-roles": [
          "admin"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "orderId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": [
                      "pending",
                      "confirmed",
                      "shipped",
                      "delivered",
                      "cancelled"
                    ],
                    "example": "confirmed"
                  }
                },
                "required": [
                  "status"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Order status updated successfully"
          },
          "404": {
            "description": "Order not found"
          }
        }
      }
    },
    "/contact": {
      "post": {
        "tags": [
          "Contact"
        ],
        "summary": "Submit a contact form query",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@example.com"
                  },
                  "query": {
                    "type": "string",
                    "example": "I have a question about my order"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "query"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data received successfully"
          },
          "400": {
            "description": "All fields are required"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}